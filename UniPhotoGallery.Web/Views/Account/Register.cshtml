@model UniPhotoGallery.DomainModel.Auth.RegisterModel

<h2 class="form-signin-heading">Registrace</h2>
@using (Html.BeginForm("register", "account", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.TextBoxFor(m => m.UserName, new {@class="input-block-level", placeholder = "Jméno / přezdívka"})
    @Html.TextBoxFor(m => m.Email, new {@class="input-block-level", placeholder = "E-mail"})
    @Html.PasswordFor(m => m.Password, new {@class="input-block-level", placeholder = "Heslo"})
    @Html.PasswordFor(m => m.ConfirmPassword, new {@class="input-block-level", placeholder = "Ověření hesla"})

    <button class="btn btn-large btn-primary" type="submit">Registrace</button>
}

@section AdditionalCSS
{
    <style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }

    </style>
}
